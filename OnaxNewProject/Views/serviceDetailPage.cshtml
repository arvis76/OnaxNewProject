@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	var riskmanager1img = Model.Value<IPublishedContent>("serviceDetailImage1");
	var keypointimg = Model.Value<IPublishedContent>("serviceDetailImage2");
	var finacialpoint2img = Model.Value<IPublishedContent>("serviceDetailImage3");
}
<div class="topmenu bg-gray">
	<h2>@Model.Value("serviceDetailHeadline")</h2>
</div>
<section class="servicedetailssection">
	<div class="container">
		<div class="servicedetailscontent">
			<aside class="servicedetailsaboutus">
				<h3>@Model.Value("serviceDetailSecondaryHeadline")</h3>
				<img class="riskmanagmentimage" src="@riskmanager1img?.Url()" alt="Riskmanagmnet">
				<p>@Model.Value("serviceDetailImage1Undertext")</p>
				<form class="howcanwehelp bg-dark">
					<h4>How can we help you?</h4>
					<p>online support 24/7, we are here to<br>help you </p>
					<input class="inputhelp" placeholder="E-mail address"><i class="fa-regular fa-envelope"></i>

				</form>
			</aside>
			<div class="projectaside">
				<div class="servicedetailskeypoints">
						<img class="keypointimage" src="@keypointimg?.Url()" alt="Keypoints">
					<h3>@Model.Value("serviceDetailImage2Headline")</h3>
					<p>@Model.Value("serviceDetailImage2Undertext")</p>
				</div>
				<div class="finacialplan">
					<h3>@Model.Value("serviceDetailImage2SecondaryHeadline")</h3>
					<p>@Model.Value("serviceDetailImage2SecondaryUnderText")</p>
					<img class="riskpointimage" src="@finacialpoint2img?.Url()" alt="Finacial plan">
				</div>
				<div class="finacialconfidance">
					<h3>@Model.Value("serviceDetailImage3Headline")</h3>
					<p>@Model.Value("serviceDetailImage3UnderText")</p>
				</div>
			</div>
		</div>
	</div>
	<form class="haveaquestionform">
		<h4>Have a question ?</h4>
		<div class="inputclassfirst">
			<input class="name1" type="text" placeholder="Name" >
			<input class="email1" type="text" placeholder="Email" >
		</div>
		<div class="submitform1">
			<input class="question1"  type="text" placeholder="Questions" >
			
		</div>
		<button class="btn-sbt bg-primary">Submit</button>
	</form>
</section>
<section>@await Html.PartialAsync("letusknowpartialview")</section>