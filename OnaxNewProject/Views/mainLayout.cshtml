@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;	
		var pageTitle = !string.IsNullOrEmpty(ViewBag.title) ? $"(ViewBag.Title) | Onatrix- Finacial Solution for Your Business" : "Onatrix - Onatrix- Finacial Solution for Your Business";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="https://kit.fontawesome.com/1244f5f25d.js" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="~/css/main.css">
	<title>@pageTitle</title>
</head>	
<body>
	<div class="wrapper">
		<header>@await Html.PartialAsync("headerPartialView")</header>
		<main>
			@RenderBody()
		</main>
		<footer>@await Html.PartialAsync("footerPartialView")</footer>
	</div>
	<script src="/script/main.js"></script>
</body>
</html>
